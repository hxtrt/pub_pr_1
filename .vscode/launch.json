{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "C/C++: gcc.exe build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",  // Оставити тут шлях до програми
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "C:\\Program Files\\CodeBlocks\\MinGW\\bin\\gdb.exe",
            "preLaunchTask": "C/C++: gcc.exe build active file",  // це ваш task, що компілює програму
            "postDebugTask": "",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
